<h2>Create a new drone</h2>
<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Editar {{name}}</h1>
            <hr>

            <form action="/drones/create" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">name</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{name}}">
                </div>



                <div class="mb-3">
                    <label for="propellers" class="form-label">propellers</label>
                    <input type="text" class="form-control" id="propellers" name="propellers" value="{{propellers}}">
                </div>

                <div class="mb-3">
                    <label for="maxSpeed" class="form-label">maxSpeed</label>
                    <input type="number" class="form-control" id="maxSpeed" name="maxSpeed" value="{{maxSpeed}}">
                </div>



                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-dark btn-lg">Guardar edici√≥n</button>
                </div>

            </form>
        </div>
    </div>
</div>