<h1></h1>
<h2>Available drones</h2>
<hr>




<div class="card" style="width: 18rem;">
    <p class="card-text">Mejores drones del mercado</p>
    {{#each drones}}
    <div class="card-body">
        <h5 class="card-title">Name: {{name}}</h5>


        <a href="/drones/{{id}}/edit" class="card-link">Edit</a>
        <form action="/drones/{{id}}/delete" method="POST">
            <input type="submit" value="Eliminar" class="btn btn-danger btn-sm">
        </form>

    </div>
    {{/each}}
</div>





<hr>